{
  "manifest_version": 2,
  "name": "FaceMask",
  "version": "0.0.1",
  "description": "Face: Mask",
  "short_name": "FaceMask",
  "permissions": [
    "https://facebook.com/*",
    "https://www.facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://facebook.com/*",
        "https://www.facebook.com/*"
      ],
      "css": [],
      "js": [
        "facemask.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  }
}